{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "os:allow-arch",
    "os:allow-exe-extension",
    "os:allow-family",
    "os:allow-hostname",
    "os:allow-locale",
    "os:allow-os-type",
    "os:allow-platform",
    "os:allow-version",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "store:allow-clear",
    "store:allow-delete",
    "store:allow-entries",
    "store:allow-has",
    "store:allow-keys",
    "store:allow-length",
    "store:allow-reset",
    "store:allow-values",
    "shell:default",
    "sql:allow-close",
    "sql:allow-execute",
    "sql:allow-load",
    "sql:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        },
        {
          "args": [],
          "cmd": "",
          "name": "binaries/node",
          "sidecar": true
        }
      ]
    },
    "fs:default",
    "os:default",
    "http:default",
    "http:default",
    "global-shortcut:default",
    "shell:default",
    "shell:allow-execute",
    "shell:allow-open",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "websocket:default"
  ]
}